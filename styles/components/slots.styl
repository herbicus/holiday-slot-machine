#slots
	width 100%
	max-width 700px
	margin 0 auto
	padding 0 25px
	position relative
	
.hero-title-holder	
	position relative
	text-align center
	width 100%
	height 45px
	background $xmasRed
	box-shadow 0 19px 38px rgba(black, .3), 0 15px 12px rgba(black, .22) 
	
.hero-icon-holder	
	color $white
	
.slots-container
	position relative
	width 100%
	max-width 700px
	margin 0 auto
	
#lever
	position absolute
	top 75%
	left 75%
	left 105%
	z-index 1 !important
	display inline-block
	-webkit-transform translate(-50%, -50%)
	-moz-transform translate(-50%, -50%)
	-ms-transform translate(-50%, -50%)
	-o-transform translate(-50%, -50%)
	transform translate(-50%, -50%)
	-webkit-background-size contain 
	-o-background-size contain 
	background-size contain
	width 92px
	text-indent -9999px
	transform-origin center bottom
	
#leverTrack
	position absolute
	top 65%
	left 106%
	z-index 0
	display inline-block
	-webkit-transform translate(-50%, -50%)
	-moz-transform translate(-50%, -50%)
	-ms-transform translate(-50%, -50%)
	-o-transform translate(-50%, -50%)
	transform translate(-50%, -50%)
	width 92px
	
	
.inline-slots
	position absolute
	top 63%
	left 50%
	width 100%
	max-width 70px
	-webkit-transform translate(-50%, -50%)
	-moz-transform translate(-50%, -50%)
	-ms-transform translate(-50%, -50%)
	-o-transform translate(-50%, -50%)
	transform translate(-50%, -50%)
	visibility hidden
	
	@media $tablet
		max-width 150px
	
.slot-left
	left 22%
	
.slot-right
	left 78%
	
.reveal
	visibility visible
	