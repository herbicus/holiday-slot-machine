// -------------------------------------
//   Helper Classes
// -------------------------------------
.clearfix:before,
.clearfix:after
  content " "
  display table

.clearfix:after
  clear both

.clearfix
  zoom 1
  
.displayNone
  display none

.hidden
  visibility hidden
  
.text-center
  text-align center
  
.desktop
  display none
  @media $tablet
    display block

// -------------------------------------
//   Mixins
// -------------------------------------

centerer(value)
  position absolute
  top value
  left 50%
  -webkit-transform translate(-50%, -50%)
  -moz-transform translate(-50%, -50%)
  -ms-transform translate(-50%, -50%)
  -o-transform translate(-50%, -50%)
  transform translate(-50%, -50%)
  
vertCenter(value)
  position relative
  top value
  width 100%
  margin 0 auto
  -webkit-transform translateY(-50%)
  -moz-transform translateY(-50%)
  -ms-transform translateY(-50%)
  -o-transform translateY(-50%)
  transform translateY(-50%)
  
coverer()
  position absolute
  top 0
  left 0
  width 100%
  height 100%
  
 
  

