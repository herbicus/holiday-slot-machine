// -------------------------------------
//   Layout
// -------------------------------------

*
  -webkit-box-sizing border-box
  -moz-box-sizing border-box
  box-sizing border-box

body
  width 100%
  background green 

main
  position fixed
  top 0
  left 0
  right 0
  bottom 0

section
  position absolute
  width 100%
  height 100%
  overflow auto
  
canvas
  position absolute
  bottom 0
  left 50%
  -webkit-transform translateX(-50%)
  -moz-transform translateX(-50%)
  -ms-transform translateX(-50%)
  -o-transform translateX(-50%)
  transform translateX(-50%)
  width 100%
  max-width 850px
  height auto
  margin 0 auto
  
