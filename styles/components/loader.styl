#loading
  transition all 0.5s ease-in-out
  position fixed
  top: 50%
  left: 50%
  width 100px
  height: 10px
  margin-top -5px
  margin-left -50px
  border 1px solid $maize
  overflow hidden

  #loading-bar
    background-color $siteRed
    height: 10px
    width 0%


#debug
  position fixed
  bottom: 0
  left: 0
  padding 20px
  background-color white
  display none
 