.landscape-overlay    
  position absolute
  width 100%
  height 100%
  background $siteGreen
  z-index 9999
  display none

  &:before
    content ''
    z-index 9900
    background url("../images/rotate-device.jpg")no-repeat center center
    -webkit-background-size cover
    -o-background-size cover
    background-size cover
    position fixed
    width 100%
    height 100%

  @media only screen and (max-device-width: 736px) and (orientation : landscape)
    display block
    
    &:before
      background url("../images/rotate-tablet.png")no-repeat center center
      -webkit-background-size contain
      -o-background-size contain
      background-size contain
      
.outdated-overlay
  position fixed
  top 0
  left 0
  z-index 9999
  width 100%
  height 100%
  background $xmasRed
  text-align center
  display none
  
  .overlay-wrap
    position relative
    top -20px
    width 100%
    max-width 800px
    border 5px solid $white
    background $siteGreen
    border-radius 5px
    margin 100px auto 0 auto
    padding 50px 0
    visibilty hidden
    opacity 0
    box-shadow 0 19px 38px rgba(black, .3), 0 15px 12px rgba(black, .22)
    h1
      font-size 48px
      line-height 56px
      padding 15px
      
    img
      width 100%
      max-width 400px
      height auto
    
