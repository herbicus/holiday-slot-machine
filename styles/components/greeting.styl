#greeting
  centerer(50%)
  overflow hidden
  // background $siteGreen
  z-index 10
  width 95%
  height 90%
  height 0%
  border 2px solid $white
  box-shadow 0 19px 38px rgba(black, .3), 0 15px 12px rgba(black, .22)
  background url(../images/card-bg-grey.jpg)no-repeat center center
  -webkit-background-size cover 
  -o-background-size cover 
  background-size cover
  
  h1
    font 700 47px/62px 'Mountains of Christmas', cursive
    padding 30px 5px
  
  img
    position relative
    top -500px
    overflow hidden
    z-index -1
    width 100%
    max-width 150px
    height auto
    margin-top 50px
    text-align center
    margin 0 auto
    padding-top 20px
    visibility hidden
    opacity 0
    
  a
    font 700 24px/32px 'Mountains of Christmas', cursive
    letter-spacing 4px
    text-decoration none
    color $siteGreen
    -webkit-transition color 0.5s ease-out 
    -moz-transition color 0.5s ease-out 
    -ms-transition color 0.5s ease-out 
    -o-transition color 0.5s ease-out 
    transition color 0.5s ease-out
    
    &:hover
      color $xmasRed  
  
  @media $tablet
  
    img
      max-width 200px
      padding-top 0
      
    h1
      font-size 72px
      line-height 134px
      padding 0
      
  @media $desktop
    width 50%
    height 0%


.l-greeting-section
  position relative
  top -135px
  width 100%
  background $xmasRed
  border-bottom 5px solid $white
  visibility hidden
  opacity 0
  // box-shadow 0 19px 38px rgba(black, .3), 0 15px 12px rgba(black, .22)
  
// social
ul
  margin 40px 0 0 0
  padding 0
  position relative
  
  @media $tablet
    margin 20px 0 0 0
  
  li
    display inline-block
    width 50px
    margin 0 15px
    -webkit-border-radius 50% 
    border-radius 50%
    background-color rgba(0, 172, 236, .05)
    box-shadow 0 0 15px 15px rgba(0, 172, 236, .05)
    // background $white
    border 5px solid $siteGreen
    border-radius 5px
    height 50px
    -webkit-transition border-color 0.5s ease-out 
    -moz-transition border-color 0.5s ease-out 
    -ms-transition border-color 0.5s ease-out 
    -o-transition border-color 0.5s ease-out 
    transition border-color 0.5s ease-out
    
    &:hover
      border-color $xmasRed
    
    a
      display block
      margin 0
      padding 5px
      width 40px
      height 40px
      padding 0
      -webkit-transition color 0.5s ease-out 
      -moz-transition color 0.5s ease-out 
      -ms-transition color 0.5s ease-out 
      -o-transition color 0.5s ease-out 
      transition color 0.5s ease-out
      
  // SVG's
  .icon-facebook,
  .icon-twitter
    width 40px
    height 40px
    padding 5px
    
    path
      -webkit-transition fill 0.5s ease-out 
      -moz-transition fill 0.5s ease-out 
      -ms-transition fill 0.5s ease-out 
      -o-transition fill 0.5s ease-out 
      transition fill 0.5s ease-out 
    
    // fill
    .social-icon-fill
      fill $siteGreen
      fill-rule evenodd
      -webkit-transition fill 0.75s easeOut 
      -moz-transition fill 0.75s easeOut 
      -ms-transition fill 0.75s easeOut 
      -o-transition fill 0.75s easeOut 
      transition fill 0.75s easeOut 
      
    &:hover .social-icon-fill
      fill $xmasRed
 




