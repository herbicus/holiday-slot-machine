//   Inbox
// -------------------------------------
// ----- The inbox allows to quickly add styles
// ----- that are easily seen by everybody else
// -------------------------------------

#volumeIcon
	position absolute
	bottom 20px
	right 40px
	width 100%
	max-width 30px
	height auto
	cursor pointer
	-webkit-transition fill 0.35s ease-out 
	-moz-transition fill 0.35s ease-out 
	-ms-transition fill 0.35s ease-out 
	-o-transition fill 0.35s ease-out 
	transition fill 0.35s ease-out 
	
	path
		fill $white
		
.muted
	opacity 0.5
		

    
